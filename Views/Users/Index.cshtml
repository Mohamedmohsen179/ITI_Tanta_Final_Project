@{
}
@model IEnumerable<ITI_Tanta_Final_Project.Models.User>
@using ITI_Tanta_Final_Project.Models

@{
    ViewData["Title"] = "Users";
}



<form method="get" asp-action="Index">
    <select name="role" asp-items="Html.GetEnumSelectList<User.Role>()">
        <option value="">-- All Roles --</option>
    </select>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add User</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Email)</th>
            <th>@Html.DisplayNameFor(m => m.First().UserRole)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.UserRole</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

