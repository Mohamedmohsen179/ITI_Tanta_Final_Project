<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITI_Tanta_Final_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITI_Tanta_Final_Project.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding-top: 20px;
        }

        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
            padding: 10px 20px;
        }

        .sidebar .nav-link:hover {
            background-color: #e9ecef;
            border-radius: 5px;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        footer {
            border-top: 1px solid #dee2e6;
            padding: 10px 0;
            text-align: center;
            background: #fff;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h5>Training Management</h5>
            <h5>System</h5>
        </div>
        <nav class="nav flex-column">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">📊 Dashboard</a>
            <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">📚 Courses</a>
            <a class="nav-link" asp-area="" asp-controller="Sessions" asp-action="Index">🗓️ Sessions</a>
            <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">👥 Users</a>
            <a class="nav-link" asp-area="" asp-controller="Grades" asp-action="Index">🎓 Grades</a>
            @* <a class="nav-link" asp-area="" asp-controller="Reports" asp-action="Index">📈 Reports</a> *@
            <hr />
            @* <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="Index">⚙️ Settings</a> *@
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <header class="mb-3">
            <h2>@ViewData["Title"]</h2>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="text-muted">
            <div class="container">
                &copy; 2025 - Training Management System -
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
