@model ITI_Tanta_Final_Project.Models.Grade

<h2>Add Grade</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Session</label>
        <select asp-for="SessionId" asp-items="ViewBag.Sessions" class="form-control"></select>
        <span asp-validation-for="SessionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Trainee</label>
        <select asp-for="TraineeId" asp-items="ViewBag.Trainees" class="form-control"></select>
        <span asp-validation-for="TraineeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Value</label>
        <input asp-for="value" class="form-control" />
        <span asp-validation-for="value" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
