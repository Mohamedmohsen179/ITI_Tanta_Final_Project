@model ITI_Tanta_Final_Project.Models.Grade

<h2>Delete Grade</h2>
<p>Are you sure you want to delete this grade?</p>

<div>
    <strong>Trainee:</strong> @Model.Trainee.Name <br />
    <strong>Session:</strong> @Model.SessionId <br />
