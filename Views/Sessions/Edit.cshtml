@{
}
@model Session
@{
    ViewData["Title"] = "Edit Session";
}
<h2 class="text-center my-4">Edit New Session</h2>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" method="post"/>
                    <div class="mb-3">
                    <label asp-for="CourseId" class="form-label
">Course</label>
                    <select asp-for="CourseId" class="form-select" asp-items="ViewBag.CourseId">
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>
               
                    
               
                    <div class="mb-3">
                    <label asp-for="StartingTime" class="form-label
">Start Date</label>
                    <input asp-for="StartingTime" class="form-control" type="date" />
                    <span asp-validation-for="StartingTime" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EndingTime" class="form-label
">End Date</label>
                    <input asp-for="EndingTime" class="form-control" type="date" />
                    <span asp-validation-for="EndingTime" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
           
            </div>
        </div>
    </div>
</div>



