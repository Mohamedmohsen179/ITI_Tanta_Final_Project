@{
}
@model ITI_Tanta_Final_Project.Models.Session
@{
    ViewData["Title"] = "Create Session";
}
<h2 class="text-center my-4">Create New Session</h2>
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form asp-action="Create" method="post">
                    <label asp-for="CourseId" class="form-label">Course</label>

                    <div class="form-group">

                        <select asp-for="CourseId" asp-items="@(new SelectList(ViewBag.Courses, "Id", "Name"))" class="form-control"></select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <label asp-for="Title" class="form-label mt-3">Session Title</label>
                    <div class="form-group
">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div>
                        <label asp-for="StartingTime" class="form-label">Start Time</label>
                        <input asp-for="StartingTime" class="form-control" type="time" />
                        <span asp-validation-for="StartingTime" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="EndingTime" class="form-label">End Time</label>
                        <input asp-for="EndingTime" class="form-control" type="time" />
                        <span asp-validation-for="EndingTime" class="text-danger"></span>
                    </div>

                    <div class="row justify-content-center mt-3">
                        <div class="col-md-8 text-end">
                            <button type="submit" class="btn btn-primary">Create Session</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
